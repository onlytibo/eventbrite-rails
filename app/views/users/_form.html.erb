       <%= form_for resource, as: resource_name, url: user_path(resource_name), html: { class: "form-signin mt-3" } do |f| %>
        <div class="form-group">
          <%= f.label :first_name, "First Name" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Last Name" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description, "More about you" %><br />
          <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control" %>
        </div>
        <%end%>